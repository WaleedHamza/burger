<div class="burger" background="burger.png" >
</div>

<h1>EAT DA BURGER</h1>

<form class="create-form" action="/api/burgers" method="POST">
    <div class="form-group">
        <input type="text" id="input" name="burger_name" size="">
    </div>

    <button id="submit" type="submit">Submit</button>
</form>

<p>Enter the name of the burger you want to eat and click the submit button</p>

<hr>
<div class="container" >
    <div class="notEaten">
        <h2>Eat these Burgers</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{>burgersBtn devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <hr>
    <div class="eaten">
        <h2>Burgers Eaten</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{>burgersBtn devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>




