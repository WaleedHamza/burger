<div class="burger" background="burger.png" >
</div>

<h1>Welcome to Eat The Burger </h1>


<div class="row">

      <div class="col s6">
              <div class="notEaten">
        <h5>Eat these Burgers</h5>
        <div>
            
            {{#each burgers}}
                {{#unless devoured}}
                    <div class="burgerDiv">
                        {{>burgersBtn devoured=false}}
                    </div>
                {{/unless}}
            {{/each}}    
            
        </div>
    </div>
      </div>



      <div class="col s6">
             <div class="eaten">
        <h5>Burgers Eaten</h5>
        <div>
            {{#each burgers}}
                {{#if devoured}}
                <div class="burgerDiv">
                    {{>burgersBtn devoured=true}}
                </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
      </div>

     <div class="col s12">
          <form class="create-form" action="/api/burgers" method="POST">
    <div class="form-group">
        <input type="text" id="input" name="burger_name" size="">
            <button id="submit" type="submit" class="waves-effect waves-light btn">Submit</button>
    </div>

</form>

<h6>Enter the name of the burger you want to eat and click the submit button</h6>

      </div>

    </div>
