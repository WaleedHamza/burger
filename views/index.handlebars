<h1>EAT DA BURGER</h1>

<form class="create-form">
    <div class="form-group">
        <input type="text" id="input" name="name">
    </div>

    <button type="submit">Submit</button>
</form>

<p>Enter the name of the burger you want to eat and click the submit button</p>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{>burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}
</ul>


<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{>burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>